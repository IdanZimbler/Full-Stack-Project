<%- include("header") -%>


<section class="banner center first-cover" id="top">
  <div class="container">
    <div class="row ">
      <div class="col-md-12 col-md-offset-1 ">
        <div class="banner-caption">
          <div class="dark-background bold-text white-text">
            <div class="line-dec center"></div>
            <h2>Forgot which episode are you at?</h2>
            <h3>Enter TV Show name and we will remind you!</h3>
          </div>
        </div>
        <div class="submit-form dark-background-search">
          <form autocomplete="off" id="form-submit" action="" method="get">
            <div class="row">
              <div class="col-md-12 first-item">
                <fieldset class="autocomplete">
                  <input name="name" type="text" class="form-control large-text" id="myInput" placeholder="Tv Show Name" required="" autofocus>
                </fieldset>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="banner center second-cover ">
  <div class="carousel-wrapper">
    <div class="line-dec center" style="margin-top:150px;"></div>
    <h2 id="popular">Most Popular TV Shows</h2>
    <div class="carousel" data-flickity='{ "initialIndex": <%=randomNum%> }'>
      <%mostPopular.forEach(tvshow=>{%>
      <div class="carousel-cell">
        <h3><a href="/TVShows/<%=tvshow.name%>"><%=tvshow.name%></a></h3>
        <a class="more" href="/TVShows/<%=tvshow.name%>">Click To Open</a>
        <a href="/TVShows/<%=tvshow.name%>">
          <img src="<%=tvshow.posterPath%>" />
        </a>
        <div class="line"></div>
        <div class="price">
          <span><%=tvshow.voteAvg%><i class="fa fa-star" aria-hidden="true"></i></span>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</section>



